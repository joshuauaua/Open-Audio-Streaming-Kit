<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Open Audio Streaming Kit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/HLS_Tool.styles.css" asp-append-version="true"/>
</head>

<body>

<header>
    <nav class="navbar navbar-expand-sm border-bottom shadow-sm mb-4">
        <div class="container">

            <!-- Logo / Brand -->
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.png" alt="HLS Tool" style="height:30px; margin-right:8px;">
                Open Audio Streaming Kit
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Right-aligned links -->
            <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                <ul class="navbar-nav mb-2 mb-sm-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="About" asp-action="Index">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Docs" asp-action="Index">Documentation</a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>
</header>

<div class="container pb-5">
    <main role="main" class="pb-5">
        @RenderBody()
    </main>
</div>

<!-- FOOTER -->
<footer class="mt-auto py-4 border-top">
    <div class="container text-center">
        <h5 class="fw-bold mb-3">Open Audio Streaming Kit</h5>
        <p>A project by <a href="https://www.sonicassembly.se" target="_blank">Sonic Assembly</a>, Stockholm.</p>

        <div class="mb-3">
            <a asp-controller="Home" asp-action="About">About</a> ·
            <a asp-controller="Home" asp-action="Docs">Documentation</a> ·
            <a href="https://github.com/joshuauaua/HLS-Tool" target="_blank">GitHub Repo</a>
        </div>

        <small>© @DateTime.Now.Year Sonic Assembly • Tools for audio technology</small>
    </div>
</footer>

<!-- Dark mode toggle -->
<button id="themeToggle" class="theme-toggle-btn">
    <img src="~/darkmode.svg" alt="Toggle Dark Mode" style="height:24px; width:24px;">
</button>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>